{
    "version": 2,
    "builds": [
        {
            "src": "run.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "run.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "run.py",
        "PYTHONPATH": "."
    }
} 